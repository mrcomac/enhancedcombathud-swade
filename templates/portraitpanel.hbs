<div class="portrait-hud">
		<div class="death-saves">
			<div class="death-save-success">
			<div class="death-save-result-container">
				<span>{{successes}}</span>
				<i class="fas fa-check"></i>
			</div>
			</div>
			<div class="death-save-btn"><i class="{{deathIcon}}"></i></div>
			<div class="death-save-fail">
				<div class="death-save-result-container">
					<span>{{failures}}</span>
					<i class="fas fa-times"></i>
				</div>
			</div>
		</div>
		<div class="portrait-hud-image" style="background-image: url('{{image}}');"></div>
		<div style="display: block" class="portrait-stat-block player-details{{#if playerDetailsBottom}} player-details-bottom{{/if}}">
			{{#if isWildcard}}
			<span style="float:right" class="wildcard-hud"> {{bennies}}</span>
			<span class="player-name">{{name}}</span>
			
			{{else}}
			<span class="player-name">{{name}}</span>
			{{/if}}
				<span class="player-detail">
					<br />{{description}}
				</span>
		</div>
		<div class="player-buttons">


		</div>
		<div class="portrait-actor-configuration">
			<i id="argon-actor-config" class="fa-solid fa-gear"></i>
		</div>
	</div>